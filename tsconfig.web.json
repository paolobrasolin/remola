{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "include": ["src/web/**/*.ts"]
}
