{
  "name": "remola",
  "version": "0.1.0",
  "description": "Monoidal languages playground",
  "author": "Paolo Brasolin <chris@linuxuser.at>",
  "repository": "https://github.com/paolobrasolin/remola",
  "license": "MIT",
  "keywords": [],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": "./dist/esbuild/web.js",
  "bin": {
    "my-cli-tool": "./dist/esbuild/cli.js"
  },
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "cli": "ts-node src/cli/index.ts",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/lib/index.ts --tsconfig tsconfig.lib.json",
    "clean": "rm -rf dist build package",
    "all": "yarn clean && yarn all:types && yarn all:build",
    "all:types": "yarn lib:types && yarn cli:types && yarn web:types",
    "all:build": "yarn lib:build && yarn cli:build && yarn web:build",
    "lib:types": "tsc --project tsconfig.lib.json --out dist/lib.js",
    "lib:build": "esbuild src/lib/index.ts --tsconfig=tsconfig.lib.json --bundle --platform=node --sourcemap=external --outfile=dist/lib.js",
    "cli:types": "tsc --project tsconfig.cli.json",
    "cli:build": "esbuild src/cli/index.ts --tsconfig=tsconfig.cli.json --bundle --platform=node --sourcemap=external --outfile=dist/cli.js",
    "web:types": "tsc --project tsconfig.web.json",
    "web:build": "vite build",
    "web:serve": "vite serve",
    "web:watch": "vite build --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.17.6",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.4.2",
    "postcss": "^8.4.21",
    "prettier": "^2.5.0",
    "tailwindcss": "^3.2.6",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.7.0",
    "typedoc": "^0.23.24",
    "typescript": "^4.6.3",
    "vite": "^4.1.1"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@svgdotjs/svg.js": "^3.1.2",
    "@types/cytoscape": "^3.19.9",
    "cytoscape": "^3.23.0"
  }
}
