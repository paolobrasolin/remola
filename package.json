{
  "name": "remola",
  "version": "0.1.0",
  "description": "Monoidal languages playground",
  "author": "Paolo Brasolin <chris@linuxuser.at>",
  "repository": "https://github.com/paolobrasolin/remola",
  "license": "MIT",
  "keywords": [],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": "./dist/esbuild/web.js",
  "bin": {
    "my-cli-tool": "./dist/esbuild/cli.js"
  },
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "cli": "ts-node src/cli.ts",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "serve": "esbuild src/web.ts --bundle --outdir=public --servedir=public",
    "clean": "rm -rf dist build package",
    "build": "tsc -p tsconfig.json",
    "build:all": "yarn clean && yarn build && yarn build:cli && yarn build:web",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "build:cli:dev": "esbuild src/cli.ts --bundle --platform=node --sourcemap=external --outfile=dist/esbuild/cli.js",
    "build:cli:watch": "esbuild src/cli.ts --bundle --platform=node --watch --sourcemap=external --outfile=dist/esbuild/cli.js",
    "build:web": "esbuild src/web.ts --bundle --minify --sourcemap=external --outfile=dist/esbuild/web.js",
    "build:web:dev": "esbuild src/web.ts --bundle --outfile=dist/esbuild/web.js",
    "build:web:watch": "esbuild src/web.ts --bundle --watch --outfile=dist/esbuild/web.js"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "esbuild": "^0.17.6",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.4.2",
    "prettier": "^2.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.7.0",
    "typedoc": "^0.23.24",
    "typescript": "^4.6.3"
  }
}
